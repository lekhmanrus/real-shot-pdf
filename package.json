{
  "name": "RealShotPDF",
  "description": "RealShotPDF is a Chrome extension designed to simplify the process of creating PDF documents from web content. The extension allows users to navigate through selected webpages, parse and display links in a tree view, and generate PDFs for the chosen pages. It operates locally without sending any data to external servers.",
  "version": "0.0.1",
  "homepage": "https://github.com/lekhmanrus/real-shot-pdf",
  "bugs": {
    "url": "https://github.com/lekhmanrus/real-shot-pdf/issues",
    "email": "lekhman112@gmail.com"
  },
  "author": "Ruslan Lekhman <lekhman112@gmail.com> (https://github.com/lekhmanrus)",
  "contributors": [
    "Ruslan Lekhman <lekhman112@gmail.com> (https://github.com/lekhmanrus)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lekhmanrus/real-shot-pdf"
  },
  "license": "MIT",
  "readme": "https://github.com/lekhmanrus/real-shot-pdf/blob/main/README.md",
  "scripts": {
    "ng": "ng",
    "start": "npm run watch",
    "build:angular": "ng build --configuration development",
    "build:angular-production": "ng build --configuration production",
    "watch:angular": "ng build --watch --configuration development --delete-output-path false --source-map=true --plugin ~angular/sourcemaps-plugin.js",
    "build:chrome": "webpack --config chrome/webpack.config.js",
    "build:chrome-production": "webpack --config chrome/webpack.config.prod.js",
    "watch:chrome": "webpack --config chrome/webpack.config.js -w",
    "build": "npm run clean && npm run build:angular && npm run build:chrome",
    "build:production": "npm run build:angular-production && npm run build:chrome-production && npm run pack",
    "watch": "npm run clean && npm-run-all --parallel watch:*",
    "clean": "rimraf angular/dist",
    "pack": "cd angular/dist && cross-var bestzip ../../real-shot-pdf-v$npm_package_version.zip *"
  },
  "private": false,
  "keywords": [
    "chrome extension",
    "pdf generation",
    "web scraping",
    "wysiwyg",
    "link parsing",
    "webpage to pdf",
    "local documentation",
    "knowledge base",
    "knowledgebase",
    "web data extraction",
    "pdf generator",
    "chrome devtools",
    "browser extension",
    "pdf merge",
    "pdf download",
    "ai assistant",
    "gpt integration",
    "chrome debugger",
    "web crawling",
    "angular",
    "material",
    "chrome",
    "extension",
    "privacy-focused",
    "open source"
  ],
  "dependencies": {
    "@angular/animations": "17.3.0-next.0",
    "@angular/cdk": "17.3.0-next.0",
    "@angular/common": "17.3.0-next.0",
    "@angular/compiler": "17.3.0-next.0",
    "@angular/core": "17.3.0-next.0",
    "@angular/forms": "17.3.0-next.0",
    "@angular/material": "17.3.0-next.0",
    "@angular/platform-browser": "17.3.0-next.0",
    "@angular/platform-browser-dynamic": "17.3.0-next.0",
    "@angular/router": "17.3.0-next.0",
    "lodash-es": "4.17.21",
    "ngx-build-plus": "17.0.0",
    "pdf-lib": "1.17.1",
    "rxjs": "7.8.1",
    "tslib": "2.6.2",
    "zone.js": "0.14.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "17.2.2",
    "@angular/cli": "17.2.2",
    "@angular/compiler-cli": "17.3.0-next.0",
    "@types/chrome": "0.0.262",
    "@types/lodash-es": "4.17.12",
    "autoprefixer": "10.4.17",
    "awesome-typescript-loader": "5.2.1",
    "bestzip": "2.2.1",
    "cross-var": "1.1.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.35",
    "rimraf": "5.0.5",
    "tailwindcss": "3.4.1",
    "ts-loader": "9.5.1",
    "typescript": "5.3.3",
    "webpack-cli": "5.1.4"
  }
}
